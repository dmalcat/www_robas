<section class="contact" id="kontakt">
	<div class="contact__row">
		<div class="contact__col contact__col--info">
			<div class="contact__inner">
				<h2>Kontakt</h2>

				<address class="contact__address">
					<strong>ROBAS Development s.r.o.</strong> <br>
					IČO: 17762995 <br>
					Kaprova 42/14, Staré Město, <br>
					110 00 Praha 1
				</address>

				<span class="contact__availability">
					TEL: <a class="contact__link" href="+420776598414">+420&nbsp;776&nbsp;598&nbsp;414</a> <br>
					EMAIL: <a class="contact__link" href="mailto:info@robas-holding.cz">info@robas-holding.cz</a><br>
					Po - Pá: 9 - 19 hod
				</span>
			</div>
		</div>
		<div class="contact__col contact__col--form">
			<div class="contact__inner">
				<h2>Ozvěte se nám</h2>
				<div class="form">
					{form contactForm}
					<ul class=error n:if="$form->ownErrors">
						<li n:foreach="$form->ownErrors as $error">{$error}</li>
					</ul>
					<div class="form__inner">
						<div class="form__group">
							<div class="form__control">
								<label n:name=name class="form__label">Jméno</label>
								<input n:name=name type="text" class="form__input">
							</div>
							<div class="form__control">
								<label n:name=surname class="form__label">Příjmení</label>
								<input n:name=surname type="text" class="form__input">
							</div>
						</div>
						<div class="form__group">
							<div class="form__control">
								<label n:name=email class="form__label">E-mail</label>
								<input n:name=email type="text" class="form__input">
							</div>
							<div class="form__control">
								<label n:name=phone class="form__label">Telefonní číslo</label>
								<input n:name=phone type="text" class="form__input">
							</div>
						</div>
						<div class="form__group form__group--1c">
							<div class="form__control">
								<label n:name=message class="form__label">Vaše zpráva</label>
								<textarea n:name=message type="text" class="form__textarea"></textarea>
							</div>
						</div>
						<div class="form__control form__control--city">
							<label n:name=city class="form__label">Město</label>
							<input n:name=city type="text" class="form__input">
						</div>
						<div class="form__group form__group--1c">
							<div class="form__control">
								<p>Odesláním souhlasíte se <a href="">zpracováním osobních údajů</a>.</p>
							</div>
						</div>
						<div class="form__group form__group--button">
							<input n:name=send class="button button--blue" value="Odeslat" />
						</div>
					</div>
					{/form}
				</div>
			</div>
		</div>
	</div>
</section>
